<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doacao"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_etec"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
         <activity
            android:name=".SplashScreen"
             android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:label="@string/app_name" android:screenOrientation="portrait" />
        <activity android:name=".ExplicacaoSerie" android:screenOrientation="portrait"/>
       
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    
</manifest>
